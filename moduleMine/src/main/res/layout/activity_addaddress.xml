<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/space_layout" />

    <include layout="@layout/titlebar_layout" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/address_name_ray"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收件人"
                    android:textColor="@color/colorBlack"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/address_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@null"
                    android:hint="请输入收件人姓名"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_clock" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLittleGray" />

            <RelativeLayout
                android:id="@+id/address_phone_ray"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorWhite">


                <TextView
                    android:id="@+id/tv_name1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收件电话"
                    android:textColor="@color/colorBlack"
                    android:textSize="16.0sp" />


                <EditText
                    android:id="@+id/adress_phone_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_name1"
                    android:background="@null"
                    android:hint="请输入收件人电话"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_clock" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLittleGray" />

            <RelativeLayout
                android:id="@+id/address_city_ray"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/tv_name2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="收货地址"
                    android:textColor="@color/colorBlack"
                    android:textSize="16.0sp" />


                <TextView
                    android:id="@+id/address_city_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_name2"
                    android:text="上海"
                    android:textColor="@color/colorBlack"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_clock" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLittleGray" />

            <RelativeLayout
                android:id="@+id/address_detailed_ray"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/tv_name3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="详细地址"
                    android:textColor="@color/colorBlack"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/address_detailed_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_name3"
                    android:background="@null"
                    android:hint="请输入详细街道，门牌地址"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_clock" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorLittleGray" />


            <Button
                android:id="@+id/address_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_btn_brown"
                android:text="保存"
                android:textColor="@color/colorWhite"
                android:textSize="18.0sp" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
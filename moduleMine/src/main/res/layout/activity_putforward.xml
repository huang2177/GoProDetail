<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/space_layout" />


    <include layout="@layout/titlebar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRiceWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/put_money_ray"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="提现金额"
                android:textColor="@color/colorBlack"
                android:textSize="16.0sp" />


            <TextView
                android:id="@+id/tx_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/text1"
                android:text="可提¥ 1000"
                android:textColor="@color/colorDeepGray"
                android:textSize="14.0sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_right_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tx_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="全部提现"
            android:textColor="@color/colorRed"
            android:textSize="16.0sp" />

        <RelativeLayout
            android:id="@+id/put_blank_ray"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="提现渠道"
                android:textColor="@color/colorBlack"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tx_banlak_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/text2"
                android:text="银行卡"
                android:textColor="@color/colorBlack"
                android:textSize="14.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_right_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLittleGray" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/put_wc_ray"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="微信账号"
                android:textColor="@color/colorBlack"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tx_wc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/text3"
                android:text="尚未绑定提现账号"
                android:textColor="@color/colorRed"
                android:textSize="14.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_right_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLittleGray" />
        </RelativeLayout>


        <Button
            android:id="@+id/put_commit_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/bg_btn_brown"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="18.0sp" />

    </LinearLayout>


</LinearLayout>
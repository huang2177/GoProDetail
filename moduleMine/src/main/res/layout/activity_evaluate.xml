<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/space_layout" />

    <include layout="@layout/titlebar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRiceWhite" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ecalu_pro_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/pro" />

                <TextView
                    android:id="@+id/ecalu_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ecalu_pro_img"
                    android:text="APPLE iPhone X 256G 黑白可选 5.1寸智能手机"
                    android:textColor="@color/colorLittleBlack1"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ecalu_pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ecalu_pro_name"
                    android:layout_toRightOf="@+id/ecalu_pro_img"
                    android:text="￥0"
                    android:textColor="@color/colorBrown"
                    android:textSize="16.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ecalu_pro_yprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ecalu_pro_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/ecalu_pro_price"
                    android:layout_toRightOf="@+id/ecalu_pro_price"
                    android:text="￥9688"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/ecalu_pro_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ecalu_pro_yprice"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/ecalu_pro_img"
                    android:text="白色 256G" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRiceWhite" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价"
                    android:textSize="16.0sp" />


                <RatingBar
                    android:id="@+id/ecalu_pro_rat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_exclamation"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="一星最低，5星最高，您得评价会帮助到其他用户" />


            <EditText
                android:id="@+id/ecalu_pro_edit"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_brown"
                android:gravity="start"
                android:hint="输入评价内容，您得评价会帮助到其他用户"
                android:padding="10dp" />


            <GridView
                android:id="@+id/ecalu_pro_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:numColumns="4" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_addimage" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
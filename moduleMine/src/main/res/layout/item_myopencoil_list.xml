<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opencoil_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:textColor="@color/colorBrown"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/opencoil_item_numbe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"

                android:textColor="@color/colorBlack"
                android:textSize="18.0sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/opencoil_item_giftpople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorGray"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/opencoil_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/opencoil_item_giftpople"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorGray"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/opencoil_item_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="18.0sp" />


            </RelativeLayout>


        </LinearLayout>


    </FrameLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/space_layout" />

    <include layout="@layout/titlebar_layout" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/modify_phone_ed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="请输入手机号码"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLittleGray"
                android:textSize="14.0sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@color/colorLittleGray" />

            <EditText
                android:id="@+id/modify_pw_ed"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="请设置登录密码"
                android:paddingLeft="50dp"
                android:textColor="@color/colorLittleGray"
                android:textSize="14.0sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@color/colorLittleGray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/modify_code_ed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="@color/colorLittleGray"
                    android:textSize="14.0sp" />


                <TextView
                    android:id="@+id/modify_sendcode_tv"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_brown1"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/colorWhite"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@color/colorLittleGray" />


            <Button
                android:id="@+id/modify_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_btn_brown"
                android:text="重置密码"
                android:textColor="@color/colorWhite"
                android:textSize="18.0sp" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
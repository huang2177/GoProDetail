<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f9f9f9"
        app:cardCornerRadius="0dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/ping_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorBrown"
            app:tabMinWidth="80dp"
            app:tabSelectedTextColor="@color/colorBrown"
            app:tabTextAppearance="@android:style/TextAppearance"
            app:tabTextColor="@color/colorDeepGray" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ping_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
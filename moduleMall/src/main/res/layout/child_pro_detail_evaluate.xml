<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_pro_detail">

    <LinearLayout
        android:id="@+id/moreeva_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="最新评价" />

        <TextView
            android:id="@+id/pro_tv_evaluate_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_right_back"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="@color/colorGray" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLittleGray" />


    <com.module.base.widgets.XListView
        android:id="@+id/evaluate_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/no_evaluate"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="暂无最新评价"
        android:textSize="16.0sp"
        android:visibility="gone" />

</LinearLayout>
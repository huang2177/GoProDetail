<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/space_layout" />

    <include layout="@layout/titlebar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRiceWhite" />

            <RelativeLayout
                android:id="@+id/order_adder_ray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/order_confirm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="8dp"
                        android:text="张小萌"
                        android:textColor="@color/colorBlack"
                        android:textSize="18.0sp" />

                    <TextView
                        android:id="@+id/order_confirm_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="18207182435"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/order_confirm_adder_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="3dp"
                    android:text="江苏省 苏州市 经开区 北京东路31号双子星大厦 A座2901" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_right_back" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRiceWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/order_prouduct_ray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/order_confirm_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pro" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/order_confirm_img"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/order_confirm_pouname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="APPLE iPhone X 256G 黑白可选 5.1寸智能手机"
                            android:textColor="@color/colorLittleBlack1"
                            android:textSize="16.0sp" />

                        <TextView
                            android:id="@+id/order_confirm_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥0"
                            android:textColor="@color/colorBrown"
                            android:textSize="16.0sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_confirm_inventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="白色 256G" />
                    </LinearLayout>


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorLittleGray" />


                <LinearLayout
                    android:id="@+id/order_confirm_gz_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mine_excla" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lineSpacingExtra="4dp"
                        android:text="参团订单不享受返现，您可以自行开团后享受返现。 查看[返现规则]"
                        android:textSize="14.0sp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRiceWhite" />

            <LinearLayout
                android:id="@+id/order_open_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/order_op_ray"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="开团券"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/order_open_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_right_back"
                        android:text="0元开团 ｜  KT0123011412214" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorLittleGray" />

                <LinearLayout
                    android:id="@+id/order_opentext_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mine_excla" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lineSpacingExtra="4dp"
                        android:text="使用开团券不会获得该商品，在邀请好友参团成功后，可以享受 丰厚的商品返现奖励。"
                        android:textSize="14.0sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRiceWhite" />

            <LinearLayout
                android:id="@+id/order_pay_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="支付方式"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="16.0sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorLittleGray" />

                <RelativeLayout
                    android:id="@+id/order_aipay_ray"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_mine_alipay"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:text="支付宝快捷支付"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/order_aipay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_checked_solid"
                        android:gravity="center_vertical"
                        android:text="已选择"
                        android:textColor="@color/colorBrown"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60dp"
                    android:background="@color/colorLittleGray" />

                <RelativeLayout
                    android:id="@+id/order_weathpay_ray"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_wechatpay"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:text="微信支付"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/order_weathpay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_checked_solid"
                        android:gravity="center_vertical"
                        android:text="已选择"
                        android:textColor="@color/colorBrown"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="60dp"
                    android:background="@color/colorLittleGray" />

                <RelativeLayout
                    android:id="@+id/order_unionpay_ray"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_unionpay"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:text="银联支付"
                        android:textColor="@color/colorDeepGray"
                        android:textSize="16.0sp" />


                    <TextView
                        android:id="@+id/order_unionpay_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/ic_checked_solid"
                        android:gravity="center_vertical"
                        android:text="已选择"
                        android:textColor="@color/colorBrown"
                        android:textSize="16.0sp" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp">

        <TextView
            android:id="@+id/order_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/order_surepay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_btn_brown1"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="@color/colorWhite"
            android:textSize="16.0sp" />
    </android.support.v7.widget.CardView>

</LinearLayout>
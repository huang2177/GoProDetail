<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/stub_layout" />

    <include layout="@layout/titlebar_layout" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="80dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/register_phone_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:textColor="@color/colorLittleGray"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/register_pwass_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:background="@null"
                    android:hint="请设置密码"
                    android:textColor="@color/colorLittleGray"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="#DDDDDD" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/registetr_code_ed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="@color/colorLittleGray"
                    android:textSize="14.0sp" />


                <TextView
                    android:id="@+id/register_sendcode_tv"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_brown1"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/colorWhite"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="#DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textColor="@color/colorDeepGray"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/register_invit_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:background="@null"
                    android:hint="填写您邀请人的邀请码"
                    android:textColor="@color/colorLittleGray"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="#DDDDDD" />

            <Button
                android:id="@+id/register_but"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_btn_brown"
                android:text="注册"
                android:textColor="@color/colorWhite"
                android:textSize="18.0sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_login_end" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="我已阅读并同意用户"
                    android:textColor="@color/colorLittleGray"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/register_agre_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《用户注册协议》"
                    android:textColor="@color/colorBrown"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/home_new_user"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_new_user"
        android:padding="10dp"
        android:text="@string/text_home_new_user" />

    <TextView
        android:id="@+id/home_pinging_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_clock"
        android:padding="10dp"
        android:text="@string/text_home_pinging" />

    <TextView
        android:id="@+id/home_pinged_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_end"
        android:padding="10dp"
        android:text="@string/text_home_pinged" />
</LinearLayout>